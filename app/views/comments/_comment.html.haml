.comment
	.threadpost.userpost
		%img.postavatar{:src => asset_path('defaultavatar.png')}
		.usertitlebar
			.username{:style => "float: left; margin-left: 5px; margin-top: 7px;"}
				%p.comment_author= comment.user.email
			.buttons{:style => "float: right; margin-right: 5px; margin-top: 7px; height: 100%;"}
				= link_to "Edit", edit_post_comment_path(comment.post, comment)
				= link_to "Delete", [comment.post, comment], method: :delete, data: { confirm: "Are you sure?"}
		.postbody
			%p.comment_content= comment.comment