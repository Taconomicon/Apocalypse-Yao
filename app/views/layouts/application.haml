!!!
%html{:lang => "en-US"}
  %head
    %link{:href => "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", :rel => "stylesheet"}
      %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"}
      %script{:src => "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"}
      %meta{:charset => "utf-8"}/
      %meta{:content => "key, words", :name => "keywords"}/
      %meta{:content => "description", :name => "description"}/
      %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
      %link{:href => "main.css", :rel => "stylesheet", :type => "text/css"}/
      %link{:href => "rss.php", :rel => "alternate", :title => "Website Feed", :type => "application/rss+xml"}/
      %link{:href => "favicon.ico", :rel => "icon", :type => "image/x-icon"}/
      %title Coup d'Hackers
      = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
      = javascript_include_tag 'application', 'data-turbolinks-track' => true
      = csrf_meta_tags
  %body{:style => "width: 100%; min-width: 1058px;"}
    / Navbar
    %nav.navbar.navbar-inverse{:style => "min-width: 1065px !important;"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle{"data-target" => "#myNavbar", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %img.navbar-brand{:src => asset_path('circle.png')}
          %a.navbar-brand{:href => root_path} Coup d'Hackers
        #myNavbar.collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-special{:style => "margin-right: 120px;"}
            %li
              %a.navbar-brand{:href => root_path} Home
            %li
              %a.navbar-brand{:href => root_path} Development
            %li
              %a.navbar-brand{:href => root_path} About
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              .btn-group
                %li.dropdown.mega-dropdown-menu
                  %button.btn.dropdown-toggle.login-button{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                    %span.glyphicon.glyphicon-user
                  .dropdown-menu
                    %form.form-signin
                      %a{:href => root_path} Account
                      %br
                      %a{:href => destroy_user_session_path} Log Out
            - else
              %li
                .wrapper
                  %span.glyphicon.glyphicon-user
                  %a{:href => new_user_session_path} Sign Up
              .btn-group
                %li.dropdown.mega-dropdown-menu
                  %button.btn.dropdown-toggle.login-button{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                    %span.glyphicon.glyphicon-log-in.dropdown-toggle
                    Login
                  .dropdown-menu
                    %form.form-signin
                      %label.sr-only{:for => "inputEmail"} Email
                      %input#inputEmail.form-control.login-input{:autofocus => "", :placeholder => "Email", :required => "", :type => "email"}
                        %label.sr-only{:for => "inputPassword"} Password
                        %input#isnputPassword.form-control.login-input{:placeholder => "Password", :required => "", :type => "password"}
                          .checkbox
                            %label
                              %input{:type => "checkbox", :value => "remember-me"}
                                Remember me
                          %button.btn.btn-lg.btn-primary.btn-block.input-button{:type => "submit"} Sign in
    / Posts
    .postcontainer.center
      = yield

      / threadbox